<div id="singularity-gate">
  <canvas id="starfield"></canvas>
  
  <div class="ui-layer">
    <div class="corner tl">SYS.MOUNT // RO</div>
    <div class="corner tr">SECURE_LINK</div>
    <div class="corner bl">EPROJECT.TOP</div>
    <div class="corner br">ID: EVAN</div>

    <div class="center-stage">
      <div class="instruction">HOLD TO INITIATE</div>
      <div class="singularity-btn" id="connect-btn">
        <!-- 黑洞本体 -->
        <div class="black-hole"></div>
        <!-- 吸积盘光晕 -->
        <div class="accretion-disk"></div>
      </div>
    </div>
  </div>
  
  <!-- 全屏吞噬遮罩 -->
  <div class="void-overlay"></div>
</div>

<style>
  /* === Global Scrollbar Lock === */
  /* 强制隐藏滚动条，直到解锁 */
  :global(html:not(.unlocked)),
  :global(body:not(.unlocked)) {
    overflow: hidden !important;
    height: 100%;
    width: 100%;
  }

  #singularity-gate {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background: #000;
    z-index: 10000;
    overflow: hidden;
    font-family: 'Inter', system-ui, sans-serif;
    color: rgba(255, 255, 255, 0.6);
  }

  canvas {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }

  .ui-layer {
    position: relative;
    z-index: 10;
    width: 100%;
    height: 100%;
    pointer-events: none;
  }

  /* 角落文字 */
  .corner {
    position: absolute;
    font-size: 10px;
    letter-spacing: 2px;
    font-weight: 500;
    opacity: 0.5;
    transition: opacity 0.5s;
  }
  .tl { top: 30px; left: 30px; border-left: 2px solid #b026ff; padding-left: 10px; }
  .tr { top: 30px; right: 30px; text-align: right; }
  .bl { bottom: 30px; left: 30px; }
  .br { bottom: 30px; right: 30px; text-align: right; }

  /* 状态：激活时隐藏角落文字 */
  .ui-layer.active .corner {
    opacity: 0;
  }

  .center-stage {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 3rem;
    pointer-events: auto;
    transition: opacity 0.5s;
  }

  .instruction {
    font-size: 11px;
    letter-spacing: 4px;
    font-weight: 600;
    color: #fff;
    opacity: 0.8;
    transition: all 0.5s ease;
  }

  .singularity-btn {
    position: relative;
    width: 100px;
    height: 100px;
    cursor: pointer;
    transition: transform 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  }

  /* 黑洞本体 (纯黑圆) */
  .black-hole {
    position: absolute;
    inset: 10px;
    background: #000;
    border-radius: 50%;
    z-index: 2;
    box-shadow: inset 0 0 20px #000; /* 内阴影增加深度 */
    transition: transform 0.2s;
  }

  /* 吸积盘 (光晕) */
  .accretion-disk {
    position: absolute;
    inset: 0;
    border-radius: 50%;
    border: 1px solid rgba(176, 38, 255, 0.3);
    box-shadow: 0 0 15px rgba(176, 38, 255, 0.2);
    z-index: 1;
    transition: all 0.5s ease;
  }

  .singularity-btn:hover .accretion-disk {
    border-color: rgba(176, 38, 255, 0.8);
    box-shadow: 0 0 30px rgba(176, 38, 255, 0.4);
    transform: scale(1.1);
  }

  /* === 状态：充能中 (HOLDING) === */
  .center-stage.holding .instruction {
    opacity: 0; /* 文字消失，专注黑洞 */
    transform: scale(0.8);
  }

  .center-stage.holding .black-hole {
    /* 黑洞本身开始轻微震颤 */
    animation: tremble 0.05s infinite;
  }

  .center-stage.holding .accretion-disk {
    border-color: #fff;
    border-width: 2px;
    box-shadow: 0 0 50px #b026ff, inset 0 0 30px #b026ff;
    transform: scale(1.5);
    animation: spin-disk 0.2s linear infinite; /* 旋转加速 */
  }

  @keyframes tremble {
    0% { transform: translate(0, 0); }
    25% { transform: translate(1px, 1px); }
    50% { transform: translate(-1px, -1px); }
    75% { transform: translate(-1px, 1px); }
    100% { transform: translate(1px, -1px); }
  }

  @keyframes spin-disk {
    0% { transform: scale(1.5) rotate(0deg); }
    100% { transform: scale(1.5) rotate(360deg); }
  }

  /* === 吞噬动画 (VOID EXPANSION) === */
  .void-overlay {
    position: fixed;
    top: 50%;
    left: 50%;
    width: 10px;
    height: 10px;
    background: #000;
    border-radius: 50%;
    transform: translate(-50%, -50%) scale(0);
    z-index: 100;
    pointer-events: none;
    transition: transform 1s cubic-bezier(0.7, 0, 0.84, 0); /* 急速扩大 */
  }

  body.unlocked .void-overlay {
    transform: translate(-50%, -50%) scale(500); /* 覆盖全屏 */
  }

  body.unlocked #singularity-gate {
    pointer-events: none;
    transition: opacity 0.5s ease 1s; /* 覆盖后淡出 */
    opacity: 0;
  }
  
  /* 隐藏 UI */
  body.unlocked .ui-layer {
    opacity: 0;
    transition: opacity 0.2s;
  }

</style>

<script>
  // Canvas Logic: 3D Warp Field
  const canvas = document.getElementById('starfield') as HTMLCanvasElement;
  const ctx = canvas.getContext('2d');
  
  let width = window.innerWidth;
  let height = window.innerHeight;
  canvas.width = width;
  canvas.height = height;

  const stars: {x: number, y: number, z: number}[] = [];
  const starCount = 800;
  
  // States
  let isHolding = false;
  let warpSpeed = 10; // Positive = coming towards camera (Warp)
  
  // Initialize Stars (3D Space)
  for (let i = 0; i < starCount; i++) {
    stars.push({
      x: (Math.random() - 0.5) * width * 2,
      y: (Math.random() - 0.5) * height * 2,
      z: Math.random() * width
    });
  }

  function draw() {
    if (!ctx) return;
    
    // Smooth transition logic
    let targetSpeed = 10; // Normal Warp Speed
    if (isHolding) {
      targetSpeed = -40; // Reverse direction (Suck in) + Fast
    }
    
    // Easing current speed to target
    warpSpeed += (targetSpeed - warpSpeed) * 0.1;

    // Trails: Lower opacity = longer trails
    // When holding (sucking), make trails clearer to see the effect
    ctx.fillStyle = isHolding ? `rgba(0, 0, 0, 0.1)` : `rgba(0, 0, 0, 0.4)`;
    ctx.fillRect(0, 0, width, height);
    
    // Color: Always White
    ctx.fillStyle = "#fff"; 
    
    const cx = width / 2;
    const cy = height / 2;

    for (let star of stars) {
      // Update Z position
      star.z -= warpSpeed;

      // Wrap around logic
      if (star.z <= 0) {
        star.z = width;
        star.x = (Math.random() - 0.5) * width * 2;
        star.y = (Math.random() - 0.5) * height * 2;
      }
      if (star.z > width) {
        star.z = 1; // Put it right in front
        star.x = (Math.random() - 0.5) * width * 2;
        star.y = (Math.random() - 0.5) * height * 2;
      }

      // 3D Projection
      // x' = x / z
      const x = (star.x / star.z) * width + cx;
      const y = (star.y / star.z) * height + cy;
      
      // Size depends on closeness (Z)
      const size = (1 - star.z / width) * 3;
      
      // Don't draw if out of bounds (optimization)
      if (x < 0 || x >= width || y < 0 || y >= height || star.z <= 0) continue;

      ctx.beginPath();
      ctx.arc(x, y, size, 0, Math.PI * 2);
      ctx.fill();
    }
    
    requestAnimationFrame(draw);
  }
  draw();

  // === Interaction Logic ===
  const btn = document.getElementById('connect-btn');
  const stage = document.querySelector('.center-stage');
  const uiLayer = document.querySelector('.ui-layer');
  const overlay = document.getElementById('singularity-gate'); // Get overlay ref
  let holdTimer;
  let isDone = false;

  // Check visited status
  if (sessionStorage.getItem('visited')) {
    if(overlay) overlay.style.display = 'none';
    document.body.classList.add('unlocked');
    document.documentElement.classList.add('unlocked');
  } else {
    document.body.style.overflow = 'hidden';
    
    // Add listeners only if not visited
    if (btn) {
      btn.addEventListener('mousedown', startCharge);
      btn.addEventListener('mouseup', stopCharge);
      btn.addEventListener('mouseleave', stopCharge);
      btn.addEventListener('touchstart', startCharge);
      btn.addEventListener('touchend', stopCharge);
    }
  }

  function startCharge() { // Changed to function declaration for hoisting scope if needed, or keep const
    if (isDone) return;
    isHolding = true;
    stage.classList.add('holding');
    uiLayer.classList.add('active');
    
    holdTimer = setTimeout(() => {
      triggerUnlock();
    }, 800); // 0.8 seconds hold
  };

  function stopCharge() {
    if (isDone) return;
    isHolding = false;
    stage.classList.remove('holding');
    uiLayer.classList.remove('active');
    clearTimeout(holdTimer);
  };

  function triggerUnlock() {
    isDone = true;
    isHolding = false;
    
    document.body.classList.add('unlocked');
    document.documentElement.classList.add('unlocked');
    document.body.style.overflow = '';
    
    // Set visited flag
    sessionStorage.setItem('visited', 'true');
  };

  // Listeners moved inside the check block above, or need to be conditionally added.
  // To avoid redefining functions inside if-else, I'll keep definitions outside and just attach conditionally.
  
  // Re-structuring the script logic slightly for clarity in replacement


  window.addEventListener('resize', () => {
    width = window.innerWidth;
    height = window.innerHeight;
    canvas.width = width;
    canvas.height = height;
  });

</script>