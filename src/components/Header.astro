---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
import HeaderLogo from './HeaderLogo.astro';
---

<header>
	<nav>
		<h2><HeaderLogo /></h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Research</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
		<div class="social-links">
			<a href="https://github.com/Evan7198" target="_blank">
				<span class="sr-only">Go to GitHub</span>
				<svg viewBox="0 0 16 16" aria-hidden="true" width="24" height="24"
					><path
						fill="currentColor"
						d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
					></path></svg
				>
			</a>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: rgba(5, 5, 8, 0.8); /* Semi-transparent dark */
		backdrop-filter: blur(10px);
		-webkit-backdrop-filter: blur(10px);
		box-shadow: 0 1px 0 rgba(176, 38, 255, 0.2); /* Neon border bottom */
		position: sticky;
		top: 0;
		z-index: 100;
	}
	h2 {
		margin: 0;
		font-size: 1.2em;
		font-family: 'Courier New', monospace;
		letter-spacing: -1px;
		/* Ensure 3D context works if needed, though component handles it */
	}

	/* Removed direct h2 a styling to allow component to handle it */

	nav {
		display: grid;
		grid-template-columns: 1fr auto 1fr; /* 左侧自适应，中间自适应，右侧自适应 */
		align-items: center;
		max-width: 800px; /* Match main width */
		margin: auto;
	}
	
	/* 强制中间链接居中 */
	.internal-links {
		display: flex;
		justify-content: center;
		gap: 1em; /* 控制链接之间的间距 */
	}

	/* 右侧社交图标靠右 */
	.social-links {
		display: flex;
		justify-content: flex-end;
	}

	nav a {
		padding: 1em 0.5em; /* 稍微减小水平内边距，改用 gap 控制间距 */
		color: #a0a0b0;
		border-bottom: 2px solid transparent;
		text-decoration: none;
		font-size: 0.95em;
		font-weight: 500;
	}
	nav a:hover {
		color: #fff;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
		color: #fff;
		text-shadow: 0 0 8px var(--accent);
	}
	
	.social-links a {
		display: flex;
		align-items: center; /* 确保图标垂直居中 */
	}
	
	@media (max-width: 720px) {
		nav {
			grid-template-columns: auto 1fr; /* 移动端改为两列 */
		}
		.internal-links {
			justify-content: flex-end; /* 链接靠右 */
		}
		.social-links {
			display: none; /* 移动端隐藏社交图标 */
		}
	}
</style>